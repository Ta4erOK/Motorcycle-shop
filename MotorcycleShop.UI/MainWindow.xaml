<Window x:Class="MotorcycleShop.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Motorcycle Shop - Продажа мотоциклов" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2D2D30" Padding="15">
            <TextBlock Text="Motorcycle Shop" 
                      Foreground="White" 
                      FontSize="20" 
                      FontWeight="Bold"/>
        </Border>

        <GroupBox Grid.Row="1" Header="Поиск и фильтры" Margin="10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                        Name="SearchTextBox" 
                        Margin="5" 
                        Padding="5"
                        TextChanged="SearchTextBox_TextChanged"
                        ToolTip="Поиск по марке, модели или описанию">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="FontSize" Value="14"/>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Foreground" Value="Gray"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <ComboBox Grid.Column="1" 
                         Name="BrandFilterComboBox" 
                         Margin="5" 
                         Width="120"
                         SelectionChanged="FilterComboBox_SelectionChanged"
                         ToolTip="Фильтр по марке">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <ComboBox Grid.Column="2" 
                         Name="YearFilterComboBox" 
                         Margin="5" 
                         Width="100"
                         SelectionChanged="FilterComboBox_SelectionChanged"
                         ToolTip="Фильтр по году выпуска">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Button Content="Поиск" 
                            Click="SearchButton_Click"
                            Style="{StaticResource ActionButtonStyle}"/>
                    <Button Content="Сбросить" 
                            Click="ResetFiltersButton_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="Gray"/>
                </StackPanel>

                <Button Grid.Column="4" 
                        Content="Корзина (0)" 
                        Name="CartButton"
                        Click="CartButton_Click"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="Green"/>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Каталог мотоциклов" Margin="10">
            <DataGrid Name="MotorcyclesDataGrid" 
                     AutoGenerateColumns="False" 
                     IsReadOnly="True"
                     SelectionMode="Single"
                     MouseDoubleClick="MotorcyclesDataGrid_MouseDoubleClick">

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Фото" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ImageUrl}" 
                                       Width="60" 
                                       Height="40"
                                       Stretch="Uniform"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Мотоцикл" 
                                       Binding="{Binding Brand}" 
                                       Width="120"/>
                    <DataGridTextColumn Header="Модель" 
                                       Binding="{Binding Model}" 
                                       Width="100"/>

                    <DataGridTextColumn Header="Год" 
                                       Binding="{Binding Year}" 
                                       Width="60"/>

                    <DataGridTextColumn Header="Объем" 
                                       Binding="{Binding EngineVolume, StringFormat={}{0} см³}" 
                                       Width="70"/>

                    <DataGridTextColumn Header="Цвет" 
                                       Binding="{Binding Color}" 
                                       Width="80"/>

                    <DataGridTextColumn Header="Пробег" 
                                       Binding="{Binding Mileage, StringFormat={}{0} км}" 
                                       Width="80"/>

                    <DataGridTextColumn Header="Цена" 
                                       Binding="{Binding Price, StringFormat={}{0:C}}" 
                                       Width="100"/>

                    <DataGridCheckBoxColumn Header="В наличии" 
                                          Binding="{Binding InStock}" 
                                          Width="70"/>

                    <DataGridTemplateColumn Header="Действия" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="В корзину" 
                                        Click="AddToCartButton_Click"
                                        Tag="{Binding Id}"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Padding="5,2"
                                        FontSize="10"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Name="StatusTextBlock" Text="Готово"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="Количество: 0" Name="CountTextBlock"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>